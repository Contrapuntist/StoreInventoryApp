<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:fontFamily="@font/pt_sans_bold"
        android:textSize="24sp"
        tools:text="Product name" />

    <TextView
        android:id="@+id/price_text"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_name"
        app:fontFamily="@font/pt_sans"
        android:textAllCaps="true"
        android:text="@string/price_text" />

    <TextView
        android:id="@+id/product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_name"
        android:layout_toRightOf="@id/price_text"
        app:fontFamily="@font/pt_sans"

        tools:text="12.99" />

    <TextView
        android:id="@+id/quantity_text"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/price_text"
        app:fontFamily="@font/pt_sans"
        android:textAllCaps="true"
        android:text="@string/quantity_text" />

    <TextView
        android:id="@+id/product_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/price_text"
        app:fontFamily="@font/pt_sans"
        android:layout_toRightOf="@id/quantity_text"
        tools:text="100" />

    <ImageView
        android:id="@+id/sale_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/product_name"
        android:src="@drawable/ic_attach_money_white_24dp"
        android:background="@drawable/background_circle"
        android:layout_marginRight="@dimen/sixteen_dp"
        android:padding="@dimen/four_dp"
        android:contentDescription="sale button"/>

</RelativeLayout>